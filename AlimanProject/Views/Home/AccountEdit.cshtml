
@{
    ViewData["Title"] = "AccountEdit";
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div>
    <main>
        <form>
            <div class="form-group row">
                <label for="e1" class="col-sm-2 col-form-label">Имя</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="e1" value="Айбек">
                </div>
            </div>

            <div class="form-group row">
                <label for="e2" class="col-sm-2 col-form-label">Фамилия</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="e2" value="Бакаев">
                </div>
            </div>

            <div class="form-group row">
                <label for="e3" class="col-sm-2 col-form-label">Номер телефона</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="e3" value="+996 772 18 19 20">
                </div>
            </div>

            <div class="form-group row">
                <label for="e4" class="col-sm-2 col-form-label">Фото</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" accept="image/*" class="custom-file-input" id="e4" aria-describedby="inputGroupFileAddon04">
                            <label class="custom-file-label" for="e4">Выберите фото</label>
                        </div>
                    </div>
                </div>
            </div>



            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-primary">Сохранить</button>
            </div>
        </form>

    </main>
</div>
